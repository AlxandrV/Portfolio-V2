<section id="contact" class="absolute indexOff d-none">
    <div class="container">
        <p class="text-center m-short">Comment me contacter</p>
        <h2 class="text-center m-title">Contact</h2>
        <div class="animation-bar"></div>

        <div class="contact p-content">
            <form action="#">
                <h4>Votre message</h4>
                <div class="d-flex space-between">
                    <input id="name" type="text" placeholder="Nom">
                    <input id="email" type="text" placeholder="Email">
                </div>
                <input id="subject" type="text" placeholder="Objet">
                <textarea id="message" cols="30" rows="10" placeholder="Message"></textarea>
                <input class="btn-submit" type="submit" value="Envoyer">
            </form>
            <div class="about"></div>
        </div>
    </div>
</section>